<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProject.HealthMonitoringPage"
             Title="Мониторинг здоровья"
             BackgroundColor="#E0F7FA">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Меню" Command="{Binding FlyoutCommand}" IconImageSource="menu_icon.png"/>
        <ToolbarItem Text="Назад" Priority="0" Clicked="OnBackClicked" IconImageSource="back_icon.png"/>
    </ContentPage.ToolbarItems>

    <StackLayout Padding="20" Spacing="20">
        <Label Style="{StaticResource HeaderStyle}"
               Text="Мой мониторинг"
               FontSize="24"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               TextColor="#00796B" />

        <Entry 
            x:Name="weightEntry"
            Placeholder="Введите вес (кг)" 
            Keyboard="Numeric" 
            Text="{Binding HealthProfile.Weight}" 
            FontSize="18"
            BackgroundColor="#B2DFDB"
            TextColor="#004D40"
            Margin="0,10,0,10"
            HeightRequest="40"
            />

            <Entry 
            x:Name="heightEntry" 
                Placeholder="Введите рост (см)" 
            Keyboard="Numeric" 
            Text="{Binding HealthProfile.Height}"
            FontSize="18"
            BackgroundColor="#B2DFDB"
            TextColor="#004D40"
            Margin="0,10,0,10"
            HeightRequest="40"
            />

        <Button Style="{StaticResource CustomButtonStyle}"
        Text="Сохранить" 
        Clicked="Button_SaveClicked"
        BackgroundColor="#4DB6AC"
        TextColor="White"
        FontSize="18">
        </Button>


        <Label 
            Text="{Binding HealthProfile.BMI, StringFormat='Индекс массы тела: {0:F2}'}"
            FontSize="18"
            VerticalOptions="Center"
            HorizontalOptions="Center" 
            TextColor="#00796B"
            Margin="0,10,0,10"
            x:Name="BmiLabel" 
            IsVisible="Hidden"/>
    </StackLayout>
</ContentPage>
