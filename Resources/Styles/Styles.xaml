<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProject.Resources.Styles.Styles">

    <!-- Заголовок -->
    <Style TargetType="Label" x:Key="HeaderStyle">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="#2C3E50"/>
    </Style>

    <!-- Кнопка -->
    <Style TargetType="Button" x:Key="CustomButtonStyle">
        <Setter Property="BackgroundColor" Value="#3498DB"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>

    <!-- Элементы списка -->
    <Style TargetType="StackLayout" x:Key="ListItemStyle">
        <Setter Property="BackgroundColor" Value="#ECF0F1"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="10"/>
    </Style>
</ResourceDictionary>